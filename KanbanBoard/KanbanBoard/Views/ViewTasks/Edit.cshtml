@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Rendering
@model KanbanTask
@{
    ViewData["Title"] = "Edit Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Edit Task</h2>
            Edit task for @Model.Title.
        </div>
        <div class="card-body">
            <div class="form-check m-1">
                <input asp-for="@Model.Title" />
                <input asp-for="@Model.Description" />
                <input asp-for="@Model.Movement" />
                <label class="form-check-label" asp-for="@Model.ResponsibleUser">
                    @Model.ResponsibleUser
                </label>
                @Html.DropDownList("Users", (List<SelectListItem>)ViewBag.Users)
                
                
                <input asp-for="@Model.Owner" class="form-check-input" />
                
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" asp-route-id="@ViewBag.userId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>